<div class="nested-fields">
	<%= f.label :title, "大見出し" %>
	<%= f.text_field :title %>
	<%= link_to_remove_association "remove heading", f %>
	<div class="subheadings">
		<%= f.fields_for :subheadings do |subheading| %>
		  <%= render "subheading_fields", f: subheading %>
	  <% end %>
		<div class="links">
			<%= link_to_add_association "add subheading", f, :subheadings %>
		</div>
  </div>
</div>