<div id="sign-up-box">
  <h2>入力内容確認</h2>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :last_name, "お名前" %>
      </div>
      <div class="col-md-8">
        <%= @writer.last_name %>
        <%= @writer.first_name %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :last_name_kana, "フリガナ" %>
      </div>
      <div class="col-md-8">
        <%= @writer.last_name_kana %>
        <%= @writer.first_name_kana %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :email, "メールアドレス" %>
      </div>
      <div class="col-md-8">
        <%= @writer.email %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :password, "パスワード" %>
      </div>
      <div class="col-md-8"><span style="font-style: italic; font-weight: lighter;">非表示 (<%= @writer.password.length %>文字)</span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :sex, "性別" %>
      </div>
      <div class="col-md-8">
        <%= @writer.sex %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :birthdate, "生年月日" %>
      </div>
      <div class="col-md-8">
        <%= @writer.birthdate.to_s(:birthdate) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :occupation, "職業" %>
      </div>
      <div class="col-md-8">
        <%= @writer.occupation %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= label :experience_year, "ライター経験年数" %>
      </div>
      <div class="col-md-8">
        <%= @writer.experience_year %>
      </div>
    </div>
  </div>
  <div class="row" style="margin-top: 5%; margin-bottom: 10%;">
    <div class="col-md-6" style="text-align: right; padding-right: 2%;">
      <%= form_for :writer, url: new_writer_registration_path do |f| %>
        <%= f.hidden_field :password %>
        <%= f.hidden_field :password_confirmation %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :last_name %>
        <%= f.hidden_field :first_name %>
        <%= f.hidden_field :last_name_kana %>
        <%= f.hidden_field :first_name_kana %>
        <%= f.hidden_field :sex %>
        <%= f.hidden_field :birthdate %>
        <%= f.hidden_field :occupation %>
        <%= f.hidden_field :experience_year %>
        <%= f.submit "入力画面へ戻る", class: "btn btn-default" %>
      <% end %>
    </div>
    <div class="col-md-6" style="text-align: left; padding-left: 2%;">
      <%= form_for :writer, url: writer_registration_path do |f| %>
        <%= f.hidden_field :password %>
        <%= f.hidden_field :password_confirmation %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :last_name %>
        <%= f.hidden_field :first_name %>
        <%= f.hidden_field :last_name_kana %>
        <%= f.hidden_field :first_name_kana %>
        <%= f.hidden_field :sex %>
        <%= f.hidden_field :birthdate %>
        <%= f.hidden_field :occupation %>
        <%= f.hidden_field :experience_year %>
        <%= f.submit "内容を確定する", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>

