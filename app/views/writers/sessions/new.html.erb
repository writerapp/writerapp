<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div id="login-box">
      <h2 style="margin-bottom: 15%;">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン情報を保持", style: "font-weight: normal;" %>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-default" %>
        </div>
      <% end %>
      <%= render "writers/shared/links" %>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>